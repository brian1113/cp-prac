{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++20",
                "-o",
                "./cpp-exec/${fileBasenameNoExtension}",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "compile and run",
            "type": "shell",
            "command": "g++ -fsanitize=address,undefined -std=c++20 ${file} -o ./cpp-exec/${fileBasenameNoExtension} && ./cpp-exec/${fileBasenameNoExtension} < ./in-out/in.txt > ./in-out/out.txt && rm ./cpp-exec/*",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
